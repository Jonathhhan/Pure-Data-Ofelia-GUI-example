#A __set local c = ofCanvas(this) \; local args = c:getArgs() \; local
xpos \, ypos \, width \, height \, minVal \, maxVal = args[1] \, args[2]
\, args[3] \, args[4] \, args[5] \, args[6] \; local mouseState = 0
\; local value = 0 \; \; function M.new() \; ofWindow.addListener("mousePressed"
\, this) \; ofWindow.addListener("mouseDragged" \, this) \; ofWindow.addListener("mouseReleased"
\, this) \; end \; \; function M.value(float) \; value = ofNormalize(float
\, minVal \, maxVal) \; return ofLerp(minVal \, maxVal \, value) \;
end \; \; function M.bang() \; ofPushMatrix() \; ofPushStyle() \; ofSetRectMode(OF_RECTMODE_CORNER)
\; ofFill() \; ofSetColor(255) \; ofDrawRectangle(xpos \, ypos \, width
\, height) \; ofSetColor(100 \, 200 \, 255) \; ofDrawRectangle(xpos
\, ypos \, value * width \, height) \; ofSetLineWidth(2) \; ofNoFill()
\; ofSetColor(0) \; ofDrawRectangle(xpos \, ypos \, width \, height)
\; ofPopStyle() \; ofPopMatrix() \; end \; \; function M.free() \;
ofWindow.removeListener("mousePressed" \, this) \; ofWindow.removeListener("mouseDragged"
\, this) \; ofWindow.removeListener("mouseReleased" \, this) \; end
\; \; function M.mousePressed(e) \; if ofGetMouseX() > xpos and ofGetMouseX()
< xpos + width and ofGetMouseY() > ypos and ofGetMouseY() < ypos +
height then \; mouseState = 1 \; value = ofNormalize((ofGetMouseX()
-xpos ) * (maxVal - minVal) / width + minVal \, minVal \, maxVal) \;
return ofLerp(minVal \, maxVal \, value) \; end \; end \; \; function
M.mouseDragged(e) \; if mouseState == 1 then \; value = ofNormalize((ofGetMouseX()
-xpos ) * (maxVal - minVal) / width + minVal \, minVal \, maxVal) \;
return ofLerp(minVal \, maxVal \, value) \; end \; end \; \; function
M.mouseReleased(e) \; mouseState = 0 \; end \;;
