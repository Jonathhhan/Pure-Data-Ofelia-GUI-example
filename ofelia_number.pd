#A __set local c = ofCanvas(this) \; local args = c:getArgs() \; local
xpos \, ypos \, width \, height = args[1] \, args[2] \, args[3] \,
args[4] \; local mouseState = 0 \; local key = 0 \; local value = 0
\; local previewValue = 0 \; local preview = 0 \; local count = 0 \;
local decimalPlace = 0 \; local multiply = 1 \; local clock = ofClock(this
\, "delay") \; \; function M.new() \; ofWindow.addListener("mousePressed"
\, this) \; ofWindow.addListener("mouseDragged" \, this) \; ofWindow.addListener("keyPressed"
\, this) \; ofWindow.addListener("keyReleased" \, this) \; end \; \;
function M.bang() \; ofPushMatrix() \; ofPushStyle() \; ofSetRectMode(OF_RECTMODE_CORNER)
\; ofFill() \; ofSetColor(0) \; ofDrawRectangle(xpos \, ypos \, width
\, height) \; ofSetColor(255) \; ofDrawRectangle(xpos + 5 \, ypos+
5 \, width - 10 \, height- 10) \; if mouseState == 0 then \; ofSetColor(0)
\; else \; ofSetColor(100 \, 200 \, 255) \; end \; if preview == 1
then \; font:drawString(string.format("%g"..">" \, previewValue) \,
xpos + 10 \, ypos + 37) \; else \; font:drawString(string.format("%g"
\, value) \, xpos + 10 \, ypos + 37) \; end \; ofPopStyle() \; ofPopMatrix()
\; end \; \; function M.mousePressed(e) \; count = 0 \; previewValue
= 0 \; preview = 0 \; decimalPlace = 0 \; multiply = 1 \; if ofGetMouseX()
> xpos and ofGetMouseX() < xpos + width and ofGetMouseY() > ypos and
ofGetMouseY() < ypos + height then \; mouseState = 1 \; else \; mouseState
= 0 \; end \; end \; \; function M.mouseDragged(e) \; if mouseState
== 1 then \; if key == 3680 or key == 3681 then \; value = math.floor(ofGetPreviousMouseY()
- ofGetMouseY()) / 1000 + value \; else \; value = math.floor(ofGetPreviousMouseY()
- ofGetMouseY()) + value \; end \; end \; return value \; end \; \;
function M.keyPressed(e) \; key = e.key \; if key == 43 and mouseState
== 1 and count == 0 then \; multiply = 1 \; end \; if key == 45 and
mouseState == 1 and count == 0 then \; multiply = - 1 \; end \; if
key == 46 and mouseState == 1 then \; decimalPlace = 1 \; end \; if
key >= 48 and key <= 57 and mouseState == 1 then \; clock:delay(3000)
\; preview = 1 \; if decimalPlace == 0 then \; previewValue = previewValue
* 10 + (key - 48) * multiply \; else \; count = count + 1 \; previewValue
= previewValue + ((key - 48) * multiply / 10 ^ count) \; end \; end
\; if key == 13 and preview == 1 then \; value = previewValue \; preview
= 0 \; mouseState = 0 \; return value \; end \; end \; \; function
M.keyReleased(e) \; key = 0 \; end \; \; function M.inlet(f) \; value
= f \; return value \; end \; \; \; function M.delay() \; preview =
0 \; previewValue = 0 \; count = 0 \; multiply = 1 \; decimalPlace
= 0 \; end \; \; function M.free() \; ofWindow.removeListener("mousePressed"
\, this) \; ofWindow.removeListener("mouseDragged" \, this) \; ofWindow.removeListener("keyPressed"
\, this) \; ofWindow.removeListener("keyReleased" \, this) \; end \;
\;;
